{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "cmake -S . -B build",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "CMake Build (Debug)",
      "type": "shell",
      "command": "cmake --build build --config Debug",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "CMake Configure"
    },
    {
      "label": "CMake Build (Release)",
      "type": "shell",
      "command": "cmake --build build --config Release",
      "problemMatcher": [],
      "group": "build"
    }
  ]
}
